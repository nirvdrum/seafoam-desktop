{
  "name": "seafoam-desktop",
  "productName": "Seafoam Desktop",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "start:debug": "electron-forge start -- --remote-debugging-port=9229",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --max-warnings 0 .",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier --list-different .",
    "prettier:fix": "prettier --write .",
    "prepare": "husky"
  },
  "keywords": [],
  "author": {
    "name": "Kevin Menard",
    "email": "kevin.menard@shopify.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "seafoam-desktop"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-auto-unpack-natives",
          "config": {}
        },
        {
          "name": "@electron-forge/plugin-fuses",
          "config": {
            "runAsNode": false,
            "enableCookieEncryption": true,
            "enableNodeOptionsEnvironmentVariable": false,
            "enableNodeCliInspectArguments": false,
            "enableEmbeddedAsarIntegrityValidation": true,
            "onlyLoadAppFromAsar": true
          }
        },
        {
          "name": "@electron-forge/plugin-webpack",
          "config": {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/electron/preload.ts"
                  }
                }
              ]
            }
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron-forge/plugin-webpack": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.34.0",
    "@types/d3-graphviz": "^2.6.7",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vercel/webpack-asset-relocator-loader": "~1.7.3",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^7.1.2",
    "electron": "37.3.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "node-loader": "^2.0.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "prettier": "2.5.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.2.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "antd": "^5.27.1",
    "d3-graphviz": "^5.6.0",
    "electron-log": "^4.4.5",
    "electron-squirrel-startup": "^1.0.1",
    "graphviz-react": "^1.2.0",
    "immutable": "^5.1.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tmp-promise": "^3.0.2"
  }
}
